</head>
<body>
    <a href="/"><h2>COVID-19</h2></a>
    <div class="box">
        <div id="heading">
            <h1><%= date %> </h1>
            <h1>List of Patients</h1>
        </div>
            
        <%for (var i=0;i<item.Name.length;i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= item.Name[i] %> <%=item.City[i] %></p><span class="status"> (sending...)</span>
            </div>
        <% } %> 
        
      <input id="one" type="text" name=it placeholder="New Patient" readonly>
      <button class="add" type="button" data-toggle="modal" data-target="#Modal2">+</button>       
    </div>
    <section id="features" class="white">
        <div class="row row1">
          <div class="col-md-4">
            <img src="blue-1.png" alt="">
          </div> 
          <div class="col-md-4">
            <img src="blue-2.png" alt="">
          </div>
          <div class="col-md-4">
              <img src="blue-3.png" alt="">
          </div>
        </div>
      </section>
      <div class="modal fade" id="Modal2" tabindex="-1" role="dialog" aria-labelledby="modal2" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add Patient Details</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="/add" method="POST">
            <div class="modal-body" id="modal">
                <form action="/add" method="POST">
                <input type="text" name="name" placeholder="Full-Name"  required autofocus>
                <br>
                <br>
                <input type="number" name="age"  placeholder="Age" autocomplete="off" >
                <br>
                <br>
                <input type="tel" name="phone"  placeholder="Phone NO." required autocomplete="off">
                <br>
                <br>
                <input type="email" name="email" placeholder="Email" required autocomplete="off"> 
                <br>
                <br>
                <input type="text",name="addres1"  placeholder="Address Line 1" required autocomplete="off">
                <br>
                <br>
                <input type="text" name="adress2"  placeholder="Address Line 1" required autocomplete="off">
                <br>
                <br>
                <input type="text" name="city" placeholder="City" required>
                <br>
                <br>
                <input type="number" name="pin"  placeholder="ZIP Code" >
                <br>
                <br>
                <h5>Condition of Patient</h5>
                Critcal <input name="cond" required type="radio">
                Medium <input name="cond"  required type="radio">
                <br>
                <br>
                <h6>If You Didn't Get Response Email Within 6 Hrs Call Us at COVID-19 Helpline No.</h6>
                <h5>ðŸ“ž1075</h5>
                <p>*The data is not stored this is only for demo purposes</p>       
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary" name="press" value="add">Add</button>
            </form>
            </div>
          </div>
        </div>
      </div>
